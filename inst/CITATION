citHeader("To cite the 'TimeHiVe' package in publications use:")

year <- format(Sys.Date(), "%Y")

citEntry(entry = "Misc",
         title = "Time-series Hierarchical Visual Explorer",
         author = personList(as.person("Vladimiro Andrea Boselli"),
                             as.person("Paolo Tagliolato"),
                             as.person("Alessandro Oggioni")),
         year = 2025,
         note = paste("R package version", "v0.1.0"),
         textVersion =
           paste("Vladimiro Andrea Boselli, Paolo Tagliolato, Alessandro Oggioni.",
                 "(2025). Time-series Hierarchical Visual Explorer (v0.1.0).",
                 "Zenodo. https://doi.org/10.5281/zenodo.15697261")
)